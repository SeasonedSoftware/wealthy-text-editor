{
  "name": "wealthy-text-editor",
  "version": "0.1.3",
  "description": "A Rich text editor",
  "author": "SeasonedSoftware",
  "license": "MIT",
  "repository": "SeasonedSoftware/wealthy-text-editor",
  "main": "dist/wealthy-text-editor.cjs.js",
  "module": "dist/wealthy-text-editor.esm.js",
  "types": "dist/types/index.d.ts",
  "engines": {
    "node": ">=8",
    "npm": ">=5"
  },
  "scripts": {
    "type-check": "tsc --noEmit",
    "type-check:watch": "npm run type-check -- --watch",
    "test": "cross-env CI=1 react-scripts test --env=jsdom",
    "test:watch": "react-scripts test --env=jsdom",
    "scaffold": "node ./scripts/scaffold.js",
    "build": "npm run build:types && npm run build:js",
    "build:js": "rollup -c",
    "build:types": "tsc --emitDeclarationOnly -p tsconfig.build.json",
    "start": "rollup -c -w",
    "prepare": "yarn run build",
    "predeploy": "yarn build && cd example/ && yarn build && cd ../",
    "deploy": "gh-pages -d example/build",
    "release:login": "npm adduser",
    "release": "npm version",
    "postrelease": "npm publish && git push --tags && git push"
  },
  "peerDependencies": {
    "@material-ui/core": "^4.2.1",
    "react": "^16.8.6",
    "react-dom": "^16.8.6",
    "uploods": "^0.5.1"
  },
  "devDependencies": {
    "@babel/core": "^7.5.5",
    "@babel/plugin-proposal-class-properties": "^7.5.5",
    "@babel/plugin-proposal-object-rest-spread": "^7.5.5",
    "@babel/preset-react": "^7.0.0",
    "@babel/preset-typescript": "^7.3.3",
    "@material-ui/core": "^4.2.1",
    "@types/lodash": "^4.14.136",
    "@types/react": "^16.8.22",
    "@types/react-dom": "^16.8.4",
    "cross-env": "^5.2.0",
    "firebase": "^6.3.0",
    "gh-pages": "^2.0.1",
    "lodash": "^4.17.14",
    "react": "^16.8.6",
    "react-dom": "^16.8.6",
    "react-scripts": "^3.0.1",
    "readline-promise": "^1.0.4",
    "replace-in-file": "^4.1.1",
    "rollup": "^1.17.0",
    "rollup-plugin-babel": "^4.3.3",
    "rollup-plugin-commonjs": "^10.0.1",
    "rollup-plugin-json": "^4.0.0",
    "rollup-plugin-node-resolve": "^5.2.0",
    "rollup-plugin-peer-deps-external": "^2.2.0",
    "rollup-plugin-postcss": "^2.0.3",
    "rollup-plugin-uglify": "^6.0.4",
    "typescript": "^3.5.3",
    "uploods": "0.5.1"
  },
  "files": [
    "dist"
  ],
  "dependencies": {
    "quill-drag-and-drop-module": "^0.3.0",
    "react-quill": "^1.3.3"
  }
}
